<Window x:Class="RLP.Chart.Client.RenderTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RLP.Chart.Client"
        xmlns:control="clr-namespace:OpenTkWPFHost.Control;assembly=OpenTkWPFHost"
        Loaded="RenderTestWindow_OnLoaded"
        mc:Ignorable="d"
        Title="渲染测试"
        Height="450"
        Width="800">
    <Grid>
        <control:ThreadOpenTkControl IsAutoAttach="True"
                                     IsRenderContinuously="True"
                                     IsShowFps="True"
                                     x:Name="ThreadOpenTkControl">

        </control:ThreadOpenTkControl>
        <Slider Width="300" 
                Minimum="0"
                Maximum="360"
                Value="-55"
                ValueChanged="RangeBase_OnValueChanged"/>
        <TextBlock x:Name="TextBlock"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   FontSize="30"
                   Foreground="Black"/>
    </Grid>
</Window>
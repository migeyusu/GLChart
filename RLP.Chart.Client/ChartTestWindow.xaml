<Window x:Class="RLP.Chart.Client.ChartTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RLP.Chart.Client"
        xmlns:control="clr-namespace:RLP.Chart.OpenGL.Control;assembly=RLP.Chart.OpenGL"
        mc:Ignorable="d"
        Loaded="ChartTestWindow_OnLoaded"
        Title="ChartTestWindow" Height="450" Width="800">
    <Grid>
        <control:LineChart
            x:Name="LineChart" />
        <Button Click="ButtonBase_OnClick"
                Height="40"
                Width="100" 
                VerticalAlignment="Top"/>
    </Grid>
</Window>